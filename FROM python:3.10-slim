FROM python:3.10-slim
WORKDIR /app
RUN apt-get update && apt-get install -y nmap metasploit-framework sqlmap recon-ng gobuster hydra john hashcat wpscan arachni
COPY requirements.txt .
RUN pip install -r requirements.txt
COPY app/ .
CMD ["uvicorn", "app.main:app", "--host", "0.0.0.0", "--port", "8000"]